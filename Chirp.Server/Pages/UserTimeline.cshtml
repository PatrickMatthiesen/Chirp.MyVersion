@page "/{author}"
@using Chirp.Core.IRepository
@inject ICheepRepository CheepRepository
@{
    ViewData["Title"] = "Chirp!";
    Layout = "Shared/_Layout";
    var hasPage = int.TryParse(Request.Query["page"], out var page);
    page = Math.Max(hasPage ? page : 1, 1);
    var cheeps = await CheepRepository.GetCheepsByAuthor(Request.RouteValues["author"].ToString(), page, 32);
}

<div>
    <h2> Public Timeline </h2>

    @if (cheeps.Count > 0)
    {
        <ul id="messagelist" class="cheeps">
            @foreach (var cheep in cheeps)
            {
                <li>
                    <p>
                        <strong>
                            <a href="/@cheep.AuthorName">@cheep.AuthorName</a>
                        </strong>
                        @cheep.Message
                        <small>&mdash; @cheep.TimeStamp.LocalDateTime.ToShortDateString()</small>
                    </p>
                </li>
            }
        </ul>
    }
    else
    {
        <em>There are no cheeps so far.</em>
    }
</div>
